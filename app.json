{
  "expo": {
    "name": "TechPhono",
    "slug": "TechPhono",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "scheme": "techphono",
    "deepLinks": true,
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "updates": {
      "enabled": false
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.techphono.repair",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos for items",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for items",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save cropped images to photo library"
      }
    },
    "android": {
      "package": "com.techphono.repair",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.VIBRATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "paths": {
      "auth/callback": "auth/callback",
      "reset-password": "reset-password"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}